{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc сборка активного файла",
            "command": "/usr/bin/gcc",
            "args": [
                "-fblocks",
                "-fdiagnostics-color=always",
                "-I",
                "${workspaceFolder}/INCLUDE/",
                "-g",
                "${file}",
                // "-o",
                // "${fileDirname}/${fileBasenameNoExtension}.o"
                // "${fileDirname}/${fileBasenameNoExtension}",
                "-v"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}